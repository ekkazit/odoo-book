<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_wizard" model="ir.ui.view">
        <field name="name">Product Wizard</field>
        <field name="model">product.multi.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Form">
                <field name="product_ids">
                    <tree string="Product List">
                        <field name="default_code"/>
                        <field name="name"/>
                        <field name="list_price"/>
                    </tree>
                </field>
                <footer>
                    <button string="Add Product" name="do_confirm_add_product" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
